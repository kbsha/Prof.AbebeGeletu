---
layout: none
permalink: /posts.json
---
[
{% for post in site.posts %}
  {
    "title": {{ post.title | jsonify }},
    "date": "{{ post.date | date: "%Y-%m-%d" }}",
    "author": {{ post.author | default: site.author | jsonify }},
    "category": {{ (post.categories | first) | default: "general" | jsonify }},
    "excerpt": {{ post.excerpt | strip_html | strip_newlines | truncate:160 | jsonify }},
    "content": {{ post.content | strip_newlines | jsonify }},
    "url": {{ post.url | relative_url | jsonify }}
  }{% unless forloop.last %},{% endunless %}
{% endfor %}
]
